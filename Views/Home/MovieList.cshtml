@{
    ViewBag.Title = "Movie List";
}

@model IEnumerable<JoelHilton_Elijah_McKay.Models.MovieResponse>

<div>
    <h2>Here are the movies in our list:</h2>

    <table>
        <thead>
            <tr>
                <th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th>
                <th>Edited</th><th>Lent to</th><th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (JoelHilton_Elijah_McKay.Models.MovieResponse x in Model)
            {
                @if (x.Title != "Independence Day")
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.LentTO</td>
                        <td>@x.Notes</td>
                    </tr>

                }

            }
        </tbody>
    </table>
</div>